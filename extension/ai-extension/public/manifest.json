{
  "manifest_version": 3,
  "name": "SENTRY AI",
  "version": "1.0",
  "description": "Sentry AI - Your Intelligent Web Companion",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
        "16": "images/NOBG/Sentry_Logo-removebg-preview.png",
        "48": "images/NOBG/Sentry_Logo-removebg-preview.png",
        "128": "images/NOBG/Sentry_Logo-removebg-preview.png"
    }
  },
  "icons": {
    "16": "images/NOBG/Sentry_Logo-removebg-preview.png",
    "48": "images/NOBG/Sentry_Logo-removebg-preview.png",
    "128": "images/NOBG/Sentry_Logo-removebg-preview.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "contentscript.js",
        "chatbotUI.js"
        ],
      "css": ["css/chatbotUI.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/WithBG/Happy_Sentry.png",
        "images/NOBG/Sentry_Logo-removebg-preview.png",
        "images/NOBG/Sentry_Chat.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}